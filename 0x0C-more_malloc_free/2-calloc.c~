#include "main.h"
#include <stdlib.h>
/**
 * _calloc - a function that allocates memory for an array, using malloc
 * @nmemb: an array of elements
 * @size: bytes size of elements
 *
 * Return: a pointer to the allocated memory
 */

void *_calloc(unsigned int nmemb, unsigned int size)
{
	char *arr;
	unsigned int i = 0;

	if (nmemb == 0)
		return (NULL);
	if (size == 0)
		return (NULL);
	arr = (*char)malloc(nmemb * size);
	if (arr == NULL)
		return (NULL);
	while (i < nmemb*size)
	{
		arr[i] = 0;
		i++;
	}
	return (arr);
}
